<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoncayoJorgeIs_ExamenPro2.Views.InformacionPage"
             Title="InformacionPage">
    <VerticalStackLayout>

        <Label 
            Text="Ingrese la longitud a convertir: "
            TextColor="White"
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <Frame BorderColor="#007ACC" BackgroundColor="Black" HasShadow="False" Padding="0" Margin="0">
            <Entry Text="{Binding InformacionJorge.DatoAConvertirInformacion }" TextColor="Gray" x:Name="entrynombre" />
        </Frame>
        

        <Label
            Text="Escoja a que medida de informacion quiere convertir"
            />

        <Label 
            
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>